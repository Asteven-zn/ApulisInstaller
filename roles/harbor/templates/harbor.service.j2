[Unit]
Description=Harbor
After=docker.service systemd-networkd.service systemd-resolved.service
Requires=docker.service
Documentation=http://github.com/vmware/harbor

[Service]
Type=simple
Restart=on-failure
RestartSec=5
ExecStart={{bin_dir}}/docker-compose -f {{HARBOR_LOCATION}}/harbor/docker-compose.yml up
ExecStop={{bin_dir}}/docker-compose -f {{HARBOR_LOCATION}}/harbor/docker-compose.yml down

[Install]
WantedBy=multi-user.target